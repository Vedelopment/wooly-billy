<div>
  <h1>Places you can place hair on Wooly Billy:</h1>

  <% @areas.each do |area| %>
    <div>
      <h2><%= area.title %></h2>
      <span><%= area.desc %></span>
    </div>
  <% end %>

</div>

<div>
  <% @hairs.each do |area| %>
  <div>
    <h2>Hair #<%= area.id %></h2>
    <span><%= area.x %></span>
    <span><%= area.y %></span>
    <span><%= area.rotate %></span>
  </div>
  <% end %>
</div>

<!-- New Assignment Page -->

<h4><b>CREATE A Hair</b></h4>
<%= form_for [@head, @hair], url: area_hairs_path do |f| %>
<div>
  x-coordinate:
  <br>
  <div>
    <%= f.text_field :x, class: "form-control" %>
  </div>
</div>
<div>
  y-coordinate:
  <br>
  <%= f.text_field :y, class: "form-control" %>
</div>
<div>
  Rotate Hair:
  <br>
  <%= f.text_field :rotate, class: "form-control" %>
</div>
<div>
  <br>
  <%= f.submit "Grow Hair" %>
  <br><br>
</div>
<% end %>
